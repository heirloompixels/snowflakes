%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:roads, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:roads, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:roads, :edit, :id => @road.id)

.tabs-content
  -form_for :road, url(:roads, :update, :id => @road.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'roads/form', :locals => { :f => f }
